pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: aws
            image: amazon/aws-cli
            command:
            - cat
            tty: true
          - name: docker
            image: docker
            command:
            - cat
            tty: true
        '''
    }
  }
  stages {
    stage('build') {
      steps {
        container('aws') {
          sh 'echo test'
          sh 'aws --version'
          sh 'git --version'
        }
        container('docker') {
          sh 'echo test docker'
          sh 'docker --version'
        }
      }
    }
  }
}

