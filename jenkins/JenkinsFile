pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: aws
            image: amazon/aws-cli
            command:
            - cat
            tty: true
          - name: docker
            image: docker:git
            command:
            - cat
            tty: true
        '''
    }
  }
  stages {
    stage('build') {
      steps {
        container('aws') {
          sh 'echo test'
          sh 'aws --version'
          sh 'ls -la'
        }
        container('docker') {
          sh 'echo test docker'
          sh 'docker --version'
        //   sh 'apk add --no-cache git'
          sh 'git --version'
          sh 'apk add --no-cache python3 py3-pip'
          sh 'apk add curl'
          sh 'python3 -m pip install awscli'
          sh 'aws --version'
          sh 'docker build -t capstone:latest .'
        }
      }
    }
  }
}

